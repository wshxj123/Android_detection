<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/info_rl1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/flow_ball_ani_full_green" >

        <Button
            android:id="@+id/info_fanhui"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/title_bar_btn"
            android:text="  返回"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="图片检测"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.27" >

        <Button
            android:id="@+id/choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/setting_button"
            android:text=" 选择文件夹 "
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fileText"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/choice"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toRightOf="@+id/choice"
            android:gravity="center"
            android:textSize="15dp" />

        <Button
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/choice"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/setting_button"
            android:text="上传并检测"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/picpath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/upload"
            android:layout_alignRight="@+id/upload"
            android:layout_below="@+id/upload"
            android:layout_marginTop="18dp"
            android:autoLink="all"
            android:text="TextView" />

    </RelativeLayout>

</LinearLayout>